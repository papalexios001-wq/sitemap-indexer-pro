{
  "name": "sitemap-indexer-pro-monorepo",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:push": "pnpm --filter @repo/db push",
    "db:studio": "pnpm --filter @repo/db studio"
  },
  "devDependencies": {
    "turbo": "^2.1.0",
    "typescript": "^5.5.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=20"
  }
}